{% extends 'layout.html.twig' %}

{% block stylesheets %}
    <link href="/assets/css/simplelightbox.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <h1>Альбом: {{ album.name }}</h1>
    {% if files is empty %}
        <h3 align="center">Файлы не найдены.</h3>
    {% else %}
        <ol id="gallery-list" class="gallery">
            {% for file in files %}
                <li>
                    <a rel="gallery" href="/media/{{ album.name }}/{{ file }}" title="{{ file }}">
                        <img src="{{ album.uri }}/{{ album.name }}/{{ file }}" alt="{{ album.name }}" class="media">
                    </a>
                    <h4 align="center">{{ file }}</h4>
                </li>
            {% endfor %}
        </ol>
    {% endif %}
    <h3 align="center" style="clear: both;"><a href="/">Назад</a></h3>
{% endblock %}

{% block javascripts %}
    <script src="/assets/js/jquery.js"></script>
    <script src="/assets/js/simple-lightbox.min.js"></script>
    <script>
        $(function(){
            var gallery = $('#gallery-list a').simpleLightbox({navText:		['&lsaquo;','&rsaquo;']});
        });
    </script>
{% endblock %}